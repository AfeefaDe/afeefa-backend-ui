<form {{action 'saveOrga' on='submit'}}>

      <div class="input-field">
        {{input value=orga.title id="title" type="text" class="validate"}}
        <label for="title" class="active">Title</label>
      </div>

      <div class="input-field">
        {{input value=orga.description id="description" type="text" class="validate"}}
        <label for="description" class="active">Description</label>
      </div>

      <div style="margin-top: 1em; color: black;">
        <label>Kategorie</label>
        {{categories-form instance=orga.category selectedCategory=orga.category}}
      </div>

      <h2>Kontaktinformationen</h2>
      <div style="margin-top: 1em; color: black;">
          {{contact-info-form instance=orga.contactInfo}}
      </div>

      <h2>Ort</h2>
      <div style="margin-top: 1em; color: black;">
        {{location-form instance=orga.location}}
      </div>

      <h2>Anmerkungen</h2>
       <div class="input-field">
        {{input value=orga.annotation.title id="annotation" type="text" class="validate"}}
        <label for="annotation">Annotation</label>
      </div>

      <button class="btn waves-effect waves-light" type="submit">Save</button>
</form>
