<form {{action 'saveOrga' on='submit'}}>

      <div class="input-field">
        <label for="title" class="active">Titel</label>
        {{input value=orga.title id="title" type="text" class="validate"}}
      </div>

      <div class="input-field">
        <label for="description" class="active">Beschreibung</label>
        {{input value=orga.description id="description" type="text" class="validate"}}
      </div>

      <div style="margin-top: 1em; color: black;">
        <label>Übergeordnete Orga</label>
        <select class="browser-default" onchange={{action "selectParent" value="target.value"}}>
          <option value="-1">Keine übergeordnete Orga</option>
          {{#each orgas as |possibleParenOrga|}}
            {{#unless (eq possibleParenOrga.id orga.id)}}
              {{#if (eq possibleParenOrga.id orga.parentOrga.id)}}
                <option value="{{possibleParenOrga.id}}" selected>{{possibleParenOrga.title}}</option>
              {{else}}
                <option value="{{possibleParenOrga.id}}">{{possibleParenOrga.title}}</option>
              {{/if}}
            {{/unless}}
          {{/each}}
        </select>
      </div>

      <div style="margin-top: 1em; color: black;">
        <label class="active">Kategorie</label>
        {{categories-form instance=orga.category selectedCategory=orga.category}}
      </div>

      <h2>Kontaktinformationen</h2>
      <div style="margin-top: 1em; color: black;">
      {{#each orga.contactInfos as |contactInfo|}}
          {{contact-info-form instance=contactInfo}}
      {{/each}}
      </div>

      <h2>Ort</h2>
      <div style="margin-top: 1em; color: black;">
      {{#each orga.locations as |location|}}
          {{location-form instance=location}}
      {{/each}}
      </div>

      <h2>Anmerkungen</h2>
        <div class="input-field">
          {{#each orga.annotations as |annotation index|}}
            <label for="annotation{{index}}" class="active">Anmerkung {{index}}</label>
            {{input value=annotation.title id="annotation{{index}}" type="text" class="validate"}}
          {{/each}}
      </div>

      <button class="btn waves-effect waves-light" type="submit">Speichern</button>
</form>