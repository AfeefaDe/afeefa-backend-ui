<navigation>
  <div id="breadcrumb">
    {{#each navigation as |route|}}
      <i class="material-icons">chevron_right</i>
      {{#if route.route}}
        {{#link-to route.route}}{{route.title}}{{/link-to}}
      {{else}}
        {{route.title}}
      {{/if}}
    {{/each}}
  </div>

  <div {{action 'toggleMenu' instance}} id="btn-sandwich">
		<i class="material-icons">menu</i>
  </div>

{{#if menuVisible}}
  <div id="menu">
	  	{{#link-to 'protected.dashboard'}}Dashboard{{/link-to}}

	  {{#if session.isAuthenticated}}
	    <section id="user-context">
		    <p><i class="material-icons">account_circle</i> {{user.forename}} {{user.surname}}</p>
		  </section>
	    <a {{action 'invalidateSession'}}>Logout</a>
	  {{else}}
	    {{#link-to 'login'}}Login{{/link-to}}
	  {{/if}}
  </div>
{{/if}}

</navigation>
{{yield}}
