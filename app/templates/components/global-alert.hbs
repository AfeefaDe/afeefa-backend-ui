{{yield}}
<div {{action 'closeAlert'}} class="alert {{alertType}} {{visibleClass}}">
  <div class="alert__closeIcon">
        <i class="material-icons">close</i>
  </div>
  <div class="alert__stateIcon">
      <i class="material-icons">error_outline</i>
  </div>
  <div class="alert__content">
    <p class="alert__contentTitle">{{title}}</p>
    <p class="alert__contentDescription">{{description}}</p>
  </div>
</div>