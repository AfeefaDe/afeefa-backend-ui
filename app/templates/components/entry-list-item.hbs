{{yield}}
<li>
  <div class="entryList__icon">
    <span class="entry-icon entry-icon--{{instance.modelName}} {{stateCSSClass}}"></span>
  </div>
  <div class="entryList__content">
    <a {{action 'navigateToSingle' instance}} class="entryList__nav">
      <h4 class="title">{{instance.title}}</h4>
      <span class="icon"><i class="material-icons">navigate_next</i></span>
    </a>
    <div class="entryList__attributes">
      {{#each attributesFormatted as |attribute|}}
        {{#if (ne attribute.name "annotations")}}
          {{#if attribute.shouldFormatAsDate }}
          <p class="item">{{format-date-relative attribute.value}}
            <span class="entryList--lightColor">({{format-date-absolute attribute.value}})</span>
          </p>
          {{else if (eq attribute.name "category")}}
          {{#if instance.category}}
          <p class="item">
            {{get instance.category "title"}}
            {{#if instance.subCategory}}
            <i class="material-icons">navigate_next</i>{{get instance.subCategory "title"}}
            {{/if}}
          </p>
          {{/if}}
          {{else}}
          <p class="item"><span class="meta">{{attribute.name}}:</span>{{attribute.value}}</p>
          {{/if}}
        {{/if}}
      {{/each}}

      {{#each attributesFormatted as |attribute|}}
        {{#if (eq attribute.name "annotations")}}
          {{#each attribute.value as |annotation|}}
          {{annotation-tag instance=annotation}}
          {{/each}}
        {{/if}}
      {{/each}}



    </div>
  </div>

</li>
