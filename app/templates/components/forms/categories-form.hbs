{{yield}}
<select class="browser-default" onchange={{action "selectCategory" value="target.value"}}>
  {{#unless instance}}
    <option selected value="-1">Bitte Kategorie ausw√§hlen</option>
  {{/unless}}
  {{#each possibleCategories as |category index|}}
    {{#if (eq instance category)}}
      <option selected value="{{index}}">{{category}}</option>
    {{else}}
      <option value="{{index}}">{{category}}</option>
    {{/if}}
  {{/each}}
</select>