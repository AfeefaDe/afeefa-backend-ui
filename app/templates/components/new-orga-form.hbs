{{outlet}}

<div class="row">
  <div class="col s12 m8 push-m2">
    <div class="mainCard">
      <div class="mainCard__header mainCard__headerLight">
        <h2 class="mainCard__headerTitle">Create New Orga</h2>
        <a href="#" {{ action 'goBack' }} class="mainCard__headerAction"><i class="material-icons">cancel</i></a>
      </div>
      <div>
        <form {{action 'save' on='submit'}}>
          <div class="input-field">
            {{input value=title id="title" type="text" class="validate"}}
            <label for="title">Titel</label>
          </div>
          <div class="input-field">
            {{input value=description id="description" type="text" class="validate"}}
            <label for="description">Description</label>
          </div>
          <div style="margin-top: 1em; color: black;">
            <label>Ãœbergeordnete Orga</label>
            <select class="browser-default" onchange={{action "selectParent" value="target.value"}}>
              <option value="" disabled selected>Choose your option</option>
              {{#each orgas as |orga|}}
                <option value="{{orga.id}}">{{orga.title}}</option>
              {{/each}}
            </select>
          </div>

          <div style="margin-top: 1em; color: black;">
            <label>Kategorie</label>
            <select class="browser-default" onchange={{action "selectCategory" value="target.value"}}>
              <option value="-1" selected>Keine Kategorie</option>
              {{#each categories as |category index|}}
                <option value="{{index}}">{{category}}</option>
              {{/each}}
            </select>
          </div>

          <div style="margin-top: 1em; color: black;">
            <label>State</label>
            <select class="browser-default" onchange={{action "selectState" value="target.value"}}>
              {{#each states as |state index|}}
                <option value="{{index}}">{{state}}</option>
              {{/each}}
            </select>
          </div>

          <button class="btn waves-effect waves-light" type="submit" style="margin-top:2em;">Save</button>
        </form>
      </div>
    </div>
  </div>
</div>
