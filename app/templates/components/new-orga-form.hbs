<div class="row">
  <div class="col s12 m8 push-m2">
    <div class="mainCard">
      <div class="mainCard__header mainCard__headerLight">
        <h2 class="mainCard__headerTitle">Create New Orga</h2>
        <!--@todo: action -->
        <a href="#" class="mainCard__headerAction"><i class="material-icons">cancel</i></a>
      </div>
      <div>
        <form {{action 'save' on='submit'}}>
          <div class="input-field">
            {{input value=title id="title" type="text" class="validate"}}
            <label for="title">Titel</label>
          </div>
          <div class="input-field">
            {{input value=description id="description" type="text" class="validate"}}
            <label for="description">Description</label>
          </div>
          <div style="margin-top: 1em; color: black;">
            <label>Ãœbergeordnete Orga</label>
            <select class="browser-default" onchange={{action "selectParent" value="target.value"}}>
              <option value="" disabled selected>Choose your option</option>
              {{#each orgas as |orga|}}
                <option value="{{orga.id}}">{{orga.title}}</option>
              {{/each}}
            </select>
          </div>
          <button class="btn waves-effect waves-light" type="submit" style="margin-top:2em;">Save</button>
        </form>
      </div>
    </div>
  </div>
</div>
