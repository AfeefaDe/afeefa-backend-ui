{{outlet}}
<div class="row">
  <div class="col s12 m8 push-m2">
    <div class="mainCard">
      <div class="mainCard__header">
        <h2 class="mainCard__headerTitle">Search</h2>
      </div>
      <div>
        <form {{action 'search' on='submit'}}>
          <div class="input-field">
            {{input value=term id="title" type="text" class="validate" autofocus="autofocus"}}
            <label for="title" class="{{if term "active" }}">Titel</label>
          </div>
          <button class="btn waves-effect waves-light" type="submit">Suchen</button>
        </form>
      </div>
      <div>
        {{#if status}}
          <p>{{status}}</p>
        {{else}}
          {{entry-list instances=searchResult}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
