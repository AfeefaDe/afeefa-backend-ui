{{outlet}}
<div class="row">
  <div class="col s12 m8 push-m2">
    <div class="mainCard">
      <div class="mainCard__header mainCard__headerLight">
        <h2 class="mainCard__headerTitle">Neues Event anlegen</h2>
        <a href="#" {{ action 'goBack' }} class="mainCard__headerAction"><i class="material-icons">chancel</i></a>
      </div>
      <div>
        <form {{action 'save' on='submit'}}>
          {{#entry-form instance=newEventInstance}}

            <div style="margin-top: 1em; color: black;">
              <label>Übergeordnete Orga</label>
              <select class="browser-default" onchange={{action "selectParent" value="target.value"}}>
                <option value="-1">Keine übergeordnete Orga</option>
                {{#each orgas as |orga|}}
                  <option value="{{orga.id}}">{{orga.title}}</option>
                {{/each}}
              </select>
            </div>

            <div class="input-field">
              <label for="date">Datum</label>
              {{input value=newEventInstance.date id="date" type="date"}}
            </div>

          {{/entry-form}}
          <button class="btn waves-effect waves-light" type="submit" style="margin-top:2em;">Speichern</button>
        </form>
      </div>
    </div>
  </div>
</div>
