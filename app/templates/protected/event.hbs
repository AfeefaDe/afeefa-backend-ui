{{outlet}}

<div class="row">
  <div class="col s12 m8 push-m2">
    <div class="mainCard">
      <div class="mainCard__header mainCard__headerLight">
        <h2 class="mainCard__headerTitle">Daten</h2>
        {{#link-to "protected.editevent" model.id class="mainCard__headerAction"}}<i class="material-icons">mode_edit</i>{{/link-to}}
      </div>
      <div>
        {{#entry-detail model=model}}
          <li>
            <span class="entryDetail__meta">Status ändern (@todo):</span>
            <select class="browser-default entryDetail__inlineInput" onchange={{action "setStatus" value="target.value"}}>
              <option value="1">Veröffentlicht</option>
              <option value="2">In Review</option>
              <option value="3">Disabled</option>
            </select>
          </li>
        {{/entry-detail}}
      </div>
    </div>
  </div>
</div>